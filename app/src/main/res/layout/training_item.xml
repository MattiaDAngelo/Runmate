<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_activity_summary_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="Camminata | gg/mm/aaaa | 00:00"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_activity_summary_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_activity_summary_2"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="0 passi | 0 m | 0 kcal | 0 h 0 min"
        android:textColor="@android:color/black"
        android:textSize="13.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_summary_1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_activity_empty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Nessuna attivitÃ  svolta.\nInizia subito!"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgv_activity_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/walk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_activity_summary_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>